generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Menu {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  description String   @db.Text
  category    String   // 'coffee', 'non-coffee', 'snack'
  image       String   // Menyimpan path gambar (misal: /uploads/kopi.png)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
model Order {
  id           Int         @id @default(autoincrement())
  customerName String?     // Nama Pelanggan / No. Meja
  status       String      @default("pending") // "pending" | "completed"
  total        Int
  createdAt    DateTime    @default(now())
  items        OrderItem[]
}

model OrderItem {
  id      Int    @id @default(autoincrement())
  menuId  Int
  name    String
  price   Float
  qty     Int
  variant String
  note    String? @default("") // Tambahkan baris ini
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId Int
}